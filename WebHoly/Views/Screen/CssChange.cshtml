@model ScreenCssType

<h1> סגנון תצוגה</h1>
<form asp-action="CssChange">
    <div class="form-group">
        <label asp-for="FontSize"></label>
        <select asp-for="FontSize" class="form-control" asp-items="ViewBag.FontSize"></select>
    </div>
    <div class="form-group">
        <label asp-for="PictureType"></label>
        <select asp-for="PictureType" class="form-control" asp-items="ViewBag.PictureType"></select>
    </div>
    <div class="form-group">
        <label asp-for="FontType"></label>
        <select asp-for="FontType" class="form-control" asp-items="ViewBag.FontType"></select>
    </div>
    <div class="form-group">
        <label asp-for="FontColor"></label>
