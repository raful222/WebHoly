@model WebHoly.ViewModels.FourthScreenViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    string Todayday = Model.Times.date.DayOfWeek.ToString() == "Sunday" ? "ראשון" :
        Model.Times.date.DayOfWeek.ToString() == "Monday" ? "שני" :
        Model.Times.date.DayOfWeek.ToString() == "Tuesday" ? "שלישי" :
        Model.Times.date.DayOfWeek.ToString() == "Wednesday" ? "רביעי" :
        Model.Times.date.DayOfWeek.ToString() == "Thursday" ? "חמישי" :
        Model.Times.date.DayOfWeek.ToString() == "Friday" ? "שישי" :
        Model.Times.date.DayOfWeek.ToString() == "Saturday" ? "שבת" : "";
}

<div class=" box">
    <div class="card">
        <div class="leftbox">
            <div class="row">
                <div class="col-md-1 "></div>
                <div class="col-md-4"><strong> @Model.Times.date.ToString("dd-MM-yy")</strong></div>
                <div class="col-md-3 "><strong>@Model.HebrewDate.hebrew</strong></div>
                <div class="col-md-1 "></div>
                <div class="col-md-2 ">
                    <strong> @Todayday</strong>
                </div>
                <div class="col-md-1 "><strong>@Model.SinagugName</strong></div>
            </div>
            <div class="row " style="margin:10px 10px;">
                <div class="col-md-2">
                </div>
                <div class="col-md-4">
                    <strong>
                        מנחה גדולה
                    </strong>
                    <span>
                        @Model.Times.times.minchaGedola.ToString("HH:mm ")
                    </span>
                </div>
                <div class="col-md-2">
                </div>
                <div class="col-md-3">
                    <strong>
                        עלות השחר
                    </strong>
                    <span>
                        @Model.Times.times.alotHaShachar.ToString("HH:mm ")
                    </span>
                </div>

            </div>
            <div class="row " style="margin:10px 10px;">
                <div class="col-md-2">
                </div>
                <div class="col-md-4">
                    <strong>
                        מנחה קטנה
                    </strong>
                    <span>
                        @Model.Times.times.minchaKetana.ToString("HH:mm ")
                    </span>
                </div>
                <div class="col-md-2">
                </div>
                <div class="col-md-3">
                    <strong>
                        הנץ החמה
                    </strong>
                    <span>
                        @Model.Times.times.dawn.ToString("HH:mm ")
                    </span>
                </div>

            </div>
            <div class="row " style="margin:10px 10px;">
                <div class="col-md-2">
                </div>
                <div class="col-md-4">
                    <strong>
                        פלג המנחה
                    </strong>
                    <span>
                        @Model.Times.times.plagHaMincha.ToString("HH:mm ")
                    </span>
                </div>
                <div class="col-md-2">
                </div>
                <div class="col-md-3">
                    <strong>
                        הנחת תפילין וטלית
                    </strong>
                    <span>
                        @Model.Times.times.misheyakirMachmir.ToString("HH:mm ")
                    </span>
                </div>
            </div>
           
            <div class="row " style="margin:10px 10px;">
                <div class="col-md-2">
                </div>
                <div class="col-md-4">
                    <strong>
                        שקיעה
                    </strong>
                    <span>
                        @Model.Times.times.sunset.ToString("HH:mm ")
                    </span>
                </div>
                <div class="col-md-2">
                </div>
                <div class="col-md-3">
                    <strong>
                        סוף זמן תפילה הגר"א
                    </strong>
                    <span>
                        @Model.Times.times.sofZmanShma.ToString("HH:mm ")
                    </span>
                </div>

            </div>
            <div class="row " style="margin:10px 10px;">
                <div class="col-md-2">
                </div>
                <div class="col-md-4">
                    <strong>
                        צאת הכוכבים
                    </strong>
                    <span>
                        @Model.Times.times.tzeit7083deg.ToString("HH:mm ")
                    </span>
                </div>
                <div class="col-md-2">
                </div>
                <div class="col-md-3">
                    <strong>
                        סוף זמן תפילה מג"א
                    </strong>
                    <span>
                        @Model.Times.times.sofZmanTfillaMGA.ToString("HH:mm ")
                    </span>
                </div>

            </div>
            <div class="row " style="margin:10px 10px;">
                <div class="col-md-2">
                </div>
                <div class="col-md-4">
                    <strong>
                        חצות הלילה
                    </strong>
                    <span>
                        @Model.Times.times.chatzotNight.ToString("HH:mm ")
                    </span>
                </div>
                <div class="col-md-2">
                </div>
                <div class="col-md-3">
                    <strong>
                        חצות היום
                    </strong>
                    <span>
                        @Model.Times.times.chatzot.ToString("HH:mm ")
                    </span>
                </div>
            </div>
            @if (Model.Times.date.DayOfWeek.ToString() == "Thursday" &&
Model.Times.date.DayOfWeek.ToString() == "Friday" &&
Model.Times.date.DayOfWeek.ToString() == "Saturday")
            {
                <div class="row " style="margin:15px 15px;">
                    <div class="col-md-2">
                    </div>
                    <div class="col-md-4">
                        <strong>
                            יציאת שבת
                        </strong>
                        <span>
                            @Model.Times.times.tzeit85deg.ToString("HH:mm ")
                        </span>
                    </div>
                    <div class="col-md-2">
                    </div>
                    <div class="col-md-3">
                        <strong>
                            יציאת שבת רבנו תם
                        </strong>
                        <span>
                            @Model.Times.times.tzeit72min.ToString("HH:mm ")
                        </span>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


<style>
    .box {
        box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
    }

    .leftbox {
        background-image: url('/img/tample2.jpeg');
        background-repeat: no-repeat;
        background-position: center;
        margin: 15px;
        filter: brightness(130%);
        background-size: 1300px 400px;
    }
    strong {
        color: darkblue;
        font-size:20px;
        font-family:'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
    }
    span {
        color: #135ca5;
        font-size: 18px;
        font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
    }
   
</style>




