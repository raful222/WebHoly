@page "/login"
@model LoginModel
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@{
    ViewData["Title"] = "Log in";
}
<link href="~/css/Login.css" rel="stylesheet" />
<section class="vh-50 " style="background-color: moccasin;">
    <div class="container  ">
        <div class="row d-flex justify-content-center align-items-center h-100 ">
            <div class="col col-xl-10  ">
                <div class="card " style="border-radius: 1rem;">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-none d-md-block">
                            <img src="~/img/artworks-000118663714-cck69x-t500x500.jpg"
                                 alt="login form" class="img-fluid" />
                        </div>
                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">
                                <form id="account" method="post">
                                    <div class="d-flex align-items-center mb-3 pb-1">
                                        <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                                        <span class=" h1 fw-bold mb-0 ">
                                            <img src="~/img/צילום מסך 2022-04-05 002322.png" class="logo" />
                                        </span>
                                    </div>
                                    <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">התחבר לחשבון שלך</h5>
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    <div class="form-outline mb-4">
                                        <label asp-for="Input.Email"></label>
                                        <input asp-for="Input.Email" class="form-control" />
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-outline mb-3">
                                        <label asp-for="Input.Password"></label>
                                        <input asp-for="Input.Password" class="form-control" />
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="form-check mb-0">
                                            <label asp-for="Input.RememberMe">
                                                <input asp-for="Input.RememberMe" />
                                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                                            </label>
                                        </div>
                                    </div>
                                    <div class="text-center text-lg-start mt-4 pt-2 login_page">
                                        <input type="submit" value="התחבר" class="btn btn-dark" style="padding-left: 2.5rem; padding-right: 2.5rem;">

                                    </div>
                                    <p class="small fw-bold mt-2 pt-1 mb-0">
                                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl"> עדין לא רשום?</a>
                                    </p>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
